def ListNode( object ) : 
    self.val = val 
    self.next = next 

class Solution(object )  :
    def isPalindrome( self , head )  : 
        slow = fast  = head 

        while fast and fast.next  : 
            slow = slow.next 
            fast  = fast.next.next 

        prev = None 
        while  slow : 
            tmp = slow.next     
            slow.next = prev 
            prev = slow 
            slow = tmp 

        first = head 
        second = prev 
        while second : 
            if first.val != second.val : 
                return Fasle 
            first = first.next 
            second =  second.next  
        return True 
